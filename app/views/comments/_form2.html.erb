<div class="row ml-0">
  <%= form_with model: comment , local: true do |form| %>


    <div class="form-group">
      <%= form.label "Comment:" %>
      <%= form.text_area :msg, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%#= form.label :user_id %>
      <%= form.hidden_field :user_id,value: current_user.id, class: "form-control"%>
      <%#= form.collection_select :user_id , User.where(id: current_user),:id,:user_name %>
      <%# form.text_area :msg, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :event_id %>
        <%= form.collection_select :event_id, Event.order(:name),:id,:name  %>
    </div>

    <div class="form-group mt-2">
      <%= form.submit "Save Changes", class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>


