<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <thead>
  <th>N</th>
  <th>User name</th>
  <th>Comment</th>

  </thead>
  <tbody>
  <% @comment.each_with_index do |comment, i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= link_to comment.user.user_name, controller: "users", action: "show", id: comment.user %></td>
      <td><%= comment.msg %></td>
    </tr>
  <% end %>
  </tbody>

</table>