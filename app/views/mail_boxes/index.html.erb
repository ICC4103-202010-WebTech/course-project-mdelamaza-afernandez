<p id="notice"><%= notice %></p>

<h1>Mail Boxes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_boxes.each do |mail_box| %>
      <tr>
        <td><%= link_to 'Show', mail_box %></td>
        <td><%= link_to 'Edit', edit_mail_box_path(mail_box) %></td>
        <td><%= link_to 'Destroy', mail_box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mail Box', new_mail_box_path %>
