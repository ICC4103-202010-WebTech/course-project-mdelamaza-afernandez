<div class="row ml-0">
  <%= form_with model: event, local: true do |form| %>

    <div class="form-group">
      <%= form.label "image" %>
      <%= form.file_field :flyer %>
    </div>
    <div class="form-group">
      <%= form.label "video" %>
      <%= form.file_field :video %>
    </div>
    <div class="form-group">
      <%= form.label "file" %>
      <%= form.file_field :file %>
    </div>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :private %>
      <%= form.check_box :private  %>
    </div>
    <div class="form-group">
      <%= form.label "Organization" %>
      <%= form.collection_select :organization_id, Organization.order(:name),:id,:name  %>
    </div>
    <%if  a %>
      <div class="form-group">
        <%= form.label "Possible Date:" %>
        <%= form.collection_select :voted_date, DateOption.order(:date),:id,:date  %>
      </div>
      <div class="form-group mt-2">
        <%= form.submit "Save Changes", class: ["btn", "btn-primary"] %>
        <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
      </div>
      <%else %>
      <div class="form-group mt-2">
        <%= form.submit "Save Changes", class: ["btn", "btn-primary"] %>
        <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <%end %>
  <% end %>
</div>

