<h1><%= @conversation.subject %></h1>
<% @conversation.receipts_for(current_user).each do |receipt| %>
  <div>
    <div><%=receipt.message.sender.name %> commented:</div>
    <p><%= receipt.message.body %></p>
  </div>
<% end %>

<%= form_tag conversation_messages_path(@conversation), method: :post do %>
  <div><%= text_area_tag :body,nil,placeholder:"Write a Message",:size =>"100x5"%></div>

  <%= submit_tag "Send Message", class:"btn btn-success" %>
<%end%>